<% if @book.errors.any? %>
  <h4><%= @book.errors.count %> error:</h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <!--User info-->
      <%= render 'users/user', user: @user %>
      <!--投稿フォーム-->
      <%= render 'books/book', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <!--book show-->
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg' %></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, 'data-confirm' => '本当に消しますか？' %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
