<!--Users info-->
<h2>User info</h2>
<table>
  <tr>
    <th><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></th>
  </tr>
  <tr>
    <th>name</th>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= @user.introduction %></td>
  </tr>
</table>

<%= link_to 'edit user', edit_user_path(current_user) %>

<!--投稿フォーム-->
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<!--投稿一覧-->
<h2>Books</h2>
<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @books.each do |book| %>
  <tr>
    <td></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>
  <% end%>
</table>
