<!--Users info-->
<h2>User info</h2>

<table class="table">
  <tr>
    <th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></th>
  </tr>
  <tr>
    <th>name</th>
    <td><%= user.name %></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<% if user.id == current_user.id %>
  <%= link_to 'edit user', edit_user_path(current_user), class:"btn btn-outline-secondary" %>
<% end%>