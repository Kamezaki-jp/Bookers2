<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">
      <!--User info-->
      <%= render 'users/user', user: @user %>
      <!--投稿フォーム-->
      <%= render 'books/book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <!--ユーザー一覧-->
      <h2>Users</h2>
      <table class="table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%=  link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end%>
      </table>
    </div>
  </div>
</div>


