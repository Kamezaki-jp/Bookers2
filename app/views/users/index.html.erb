<!--User info-->
<%= render 'users/user', user: @user %>

<!--投稿フォーム-->
<%= render 'books/book', book: @book %>

<!--ユーザー一覧-->
<h2>Users</h2>
<table>
  <tr>
    <th>image</th>
    <th>name</th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%=  link_to 'Show', user_path(user.id) %></td>
    </tr>
  <% end%>
</table>
